<h1>Order History</h1>

<% if @orders.nil? %>
  <h2>You don't have Order History</h2>
<% else %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Origin</th>
          <th>Destination</th>
          <th>Service Type</th>
          <th>Payment Type</th>
          <th>Driver</th>
          <th>Price</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.origin %></td>
          <td><%= order.destination %></td>
          <td><%= order.service_type %></td>
          <td><%= order.payment_type %></td>
          <td>
            <% d = Driver.find(order.driver_id) %>
            <%= d.name %>
          </td>
          <td><%= number_to_currency(order.est_price, unit: "Rp ", delimiter: ".", separator: ",") %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>

<%= link_to 'New Oder', new_order_path %>

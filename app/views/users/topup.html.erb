<h1>Topup Gopay Credit</h1>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>Gopay Credit</th>
        <td><%= number_to_currency(@user.gopay, unit: "Rp ", delimiter: ".", separator: ",") %></td>
      </tr>
      <tr>
        <th></th>
        <td>
          <div style="width: 50%">
            <%= form_for @user, :url => { :action => 'save_topup' } do |f| %>
              <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved</h2>

                  <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li class="text-danger"><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="field">
                <%= text_field_tag :topup_gopay, params[:topup_gopay] %>
              </div>

              <div class="field">
                <%= f.hidden_field :gopay %>
              </div>

              <div class="actions">
                <%= f.submit "Top Up" %>
              </div>
            <% end %>
          </div>
        </td>
      </tr>
    </thead>
  </table>
 </div>

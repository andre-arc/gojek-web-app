<%= form_for @driver, :url => { :action => 'change_location' } do |f| %>
  <% if @driver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@driver.errors.count, "error") %> prohibited this user from being saved</h2>

      <ul>
      <% @driver.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<h1>Change Location</h1>
<div>
  <strong>Name:</strong>
  <%= @driver.name %>
</div>
<div>
  <strong>Location:</strong>
  <%= @driver.location %>
</div>
  <fieldset>
    <legend></legend>
    <div class="field">
      <%= text_field_tag :location, params[:location] %>
    </div>

    <div class="field">
      <%= f.hidden_field :location %>
    </div>

    <div class="actions">
      <%= f.submit "Change" %>
    </div>
  </fieldset>
<% end %>

<%= link_to 'Back', drivers_path %>
